    - "Red Hat Enterprise Linux 7 Server - RH Common RPMs x86_64 7Server"
    - "Red Hat Enterprise Linux 7 Server RPMs x86_64 7Server"
    filters:
    - name: "all-packages-no-errata"
      type: "rpm"
      inclusion: "true"
      desc: "'Give me all the gold'"
      originalpackages: "true"
      repositories: "all"
        
    - name: "errata-by-date-monthly"
      type: "erratum"
      inclusion: "true"
      desc: "'include the errata to end date'"
      repositories: "all"
      rules:
      - name: "errata-by-date-{{ errata_end_date }}"
        enddate: "2019-01-01"
        datetype: "issued"
        types:
        - "enhancement"
        - "bugfix"
        - "security"

    - name: "no-firefox"
      type: "rpm"
      inclusion: "false"
      desc: "'no firefox on servers'"
      originalpackages: "true"
      repositories: "all"
      rules:
      - name: "firefox*"
        basearch: "x86_64"
 
